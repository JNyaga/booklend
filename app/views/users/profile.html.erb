<div class="max-w-6xl mx-auto mt-10 px-4">
    <h1 class="text-2xl font-semibold text-gray-800 mb-4">Your Borrowed Books</h1>

    <% if @borrowings.any? %>
    <ul class="grid md:grid-cols-3 gap-6">
        <% @borrowings.each do |borrowing| %>
        <%= render partial: "books/book_item", locals: {
          book: borrowing.book,
          due_date: borrowing.due_date,       # Show "Due: ..." line
          show_return_button: true            # Show "Return" button
        } %>
        <% end %>
    </ul>
    <% else %>
    <p class="text-gray-600 text-center">You haven't borrowed any books yet.</p>
    <% end %>

    <div class="mt-6 text-center">
        <%= link_to "Back to Books", books_path, 
          class: "text-blue-500 hover:underline text-lg font-medium" %>
    </div>
</div>
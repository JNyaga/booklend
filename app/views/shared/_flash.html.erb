<% flash.each do |type, message| %>
<% next if message.blank? %>

<% bg_color, text_color, border_color = case type.to_sym
       when :alert then ["bg-red-100", "text-red-700", "border-red-500"]
       when :notice then ["bg-green-100", "text-green-700", "border-green-500"]
       when :info then ["bg-blue-100", "text-blue-700", "border-blue-500"]
       when :warning then ["bg-yellow-100", "text-yellow-700", "border-yellow-500"]
       else ["bg-gray-100", "text-gray-700", "border-gray-500"]
     end %>

<div class="max-w-lg mx-auto mt-5 <%= bg_color %> border <%= border_color %> text-center p-3 rounded-lg shadow-md relative">
    <p class="<%= text_color %> font-semibold"><%= message %></p>
    <button onclick="this.parentElement.style.display='none';" class="absolute top-1 right-3 text-gray-600 hover:text-gray-800">&times;</button>
</div>
<% end %>
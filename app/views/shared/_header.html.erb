<nav class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-4 px-6 shadow-md">
    <div class="max-w-6xl mx-auto flex justify-between items-center">
        <!-- Logo / Brand -->
        <%= link_to root_path, class: "flex items-center space-x-2" do %>
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 5h18M9 3v2m6-2v2M4 21h16a1 1 0 001-1V7H3v13a1 1 0 001 1z"></path>
        </svg>
        <h1 class="text-2xl font-bold tracking-wide">Book Library</h1>
        <% end %>

        <!-- Navigation Links -->
        <div class="flex items-center space-x-6">
            <% if Current.user.present? %>
            <!-- Profile Link (Circular avatar + text) -->
            <%= link_to profile_path, class: "flex items-center space-x-2 text-white hover:text-gray-300 transition relative group" do %>
            <!-- Circular Avatar Placeholder -->
            <div class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center 
                      group-hover:ring-2 group-hover:ring-offset-2 group-hover:ring-gray-300 transition">
                <!-- User Icon -->
                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 11c2.45 0 4-1.79 4-4s-1.55-4-4-4-4 1.79-4 4 1.55 4 4 4zm0 2
                       c-2.67 0-8 1.34-8 4v3h16v-3c0-2.66-5.33-4-8-4z" />
                </svg>
            </div>
            <!-- Email text on wider screens only -->
            <span class="hidden sm:inline-block">
                Welcome, <%= Current.user.email_address %>!
            </span>
            <% end %>

            <!-- Sign Out Button -->
            <%= link_to "Sign out", new_session_path, method: :delete,
              class: "bg-red-500 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg transition duration-300" %>
            <% else %>
            <!-- Not logged in -->
            <%= link_to "Sign In", new_session_path,
              class: "text-white hover:text-gray-200 transition duration-300" %>
            <%= link_to "Sign Up", new_registrations_path,
              class: "bg-green-500 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition duration-300" %>
            <% end %>
        </div>
    </div>
</nav>
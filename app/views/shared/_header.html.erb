<nav class="bg-black text-white py-4 px-6">
    <div class="max-w-6xl mx-auto flex items-center justify-between">
        <!-- Left: Logo / Brand -->
        <div class="flex items-center space-x-4">
            <!-- Main Brand Link -->
            <%= link_to root_path, class: "flex items-center space-x-2" do %>
            <!-- Icon (Optional) -->
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 5h18M9 3v2m6-2v2M4 21h16a1 1 0 001-1V7H3v13a1 1 0 001 1z" />
            </svg>
            <span class="text-2xl font-bold uppercase tracking-wide">Book Lend</span>
            <% end %>

            <!-- Subheading (Optional) -->
            <!-- Remove or edit if you prefer a cleaner look -->
            <span class="hidden sm:inline-block text-gray-400 text-sm">
                Books + More
            </span>
        </div>

        <!-- Right: Search & Nav Links -->
        <div class="flex items-center space-x-6">
            <!-- Search Bar -->
            <div class="relative">
                <%= form_with url: books_path, method: :get, local: true do |form| %>
                <%= form.text_field :query,
                              value: params[:query],
                              placeholder: "Search books...",
                              class: "rounded-full py-1 pl-10 pr-4 bg-gray-800 text-gray-100 " \
                                     "focus:outline-none focus:ring-2 focus:ring-offset-2 " \
                                     "focus:ring-offset-black focus:ring-blue-500" %>
                <!-- Search Icon -->
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                    <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M12.9 14.32a8 8 0 111.414-1.414l4.387 4.387a1 1 0 01-1.414 
                       1.414l-4.387-4.387zM8 14a6 6 0 100-12 6 6 0 000 12z" clip-rule="evenodd" />
                    </svg>
                </div>
                <% end %>
            </div>

            <!-- Auth Links -->
            <% if Current.user.present? %>
            <!-- Profile Icon -->
            <%= link_to profile_path, class: "flex items-center text-gray-300 hover:text-white transition" do %>
            <div class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-gray-800" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 11c2.45 0 4-1.79 4-4s-1.55-4-4-4-4 1.79-4 4 
                       1.55 4 4 4zm0 2c-2.67 0-8 1.34-8 4v3h16v-3c0-2.66-5.33-4-8-4z" />
                </svg>
            </div>
            <% end %>

            <!-- Sign Out Button -->
            <%= link_to "Sign out",
                    new_session_path,
                    method: :delete,
                    class: "bg-red-600 hover:bg-red-500 text-white font-medium py-2 px-4 rounded-full transition" %>
            <% else %>
            <%= link_to "Sign In",
                    new_session_path,
                    class: "text-gray-300 hover:text-white transition" %>
            <%= link_to "Sign Up",
                    new_registrations_path,
                    class: "bg-green-600 hover:bg-green-500 text-white font-medium py-2 px-4 rounded-full transition" %>
            <% end %>
        </div>
    </div>
</nav>